{
    "name": "bakabot/component",
    "description": "Provides the base classes and interfaces for Bakabot components.",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "acclimate/container": "^2",
        "maddhatter/markdown-table": "^1",
        "nikic/php-parser": "^4",
        "php-di/php-di": "^6",
        "symfony/finder": "^6"
    },
    "require-dev": {
        "nayleen/development": "dev-main",
        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "php-di/php-di": "Recommended default container"
    },
    "autoload": {
        "psr-4": {
            "Bakabot\\Component\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bakabot\\Component\\": "tests/"
        }
    },
    "bin": [
        "bin/update-readme"
    ],
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "lock": false,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-main": "2.0.x-dev"
        }
    }
}
